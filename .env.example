# Application Configuration
APP_ENV=production
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=ecommerce-analytics

# Model Retraining Schedule
RETRAIN_SCHEDULE=0 2 * * 0  # Weekly at 2 AM on Sundays
RUN_ON_STARTUP=false

# Marketing Automation API Keys
HUBSPOT_API_KEY=your_hubspot_api_key_here
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_SERVER_PREFIX=us1  # Change based on your Mailchimp account
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_TO=admin@example.com

# Feature Flags
ENABLE_REAL_TIME_PREDICTIONS=true
ENABLE_AUTO_RETRAIN=true
ENABLE_MARKETING_SYNC=true
ENABLE_AB_TESTING=true

# Performance
MAX_BATCH_SIZE=1000
CACHE_TTL_SECONDS=3600
MODEL_CACHE_SIZE=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json